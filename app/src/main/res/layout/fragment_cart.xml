<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="cn.ucai.fulicenter.fragment.CartFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/m_Cart_Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f57f00"
                    android:text="合计：¥ 1600"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/m_Cart_Save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#dc1b01"
                    android:text="节省：¥ 160"
                    android:textSize="20dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/m_Cart_Pay"
                android:layout_alignParentRight="true"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="购买"
                android:textColor="#fff"
                android:textSize="30dp"
                android:background="#f24500"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#838383"
            ></LinearLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/m_Cart_Swi"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/m_Cart_Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刷新中。。。"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/m_Cart_Recy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</FrameLayout>
