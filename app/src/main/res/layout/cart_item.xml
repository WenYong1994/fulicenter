<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#b4b4b4"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:layout_height="90dp">
    <RelativeLayout
        android:background="#fff"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/m_Cart_Check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/checkbox_normal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/m_Cart_Iv"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/m_Cart_Check"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/nopic"
            />
        <TextView
            android:id="@+id/m_Cart_Goods_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f57f00"
            android:text="商品名"
            android:textSize="20dp"
            android:layout_toRightOf="@id/m_Cart_Iv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/m_Cart_Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/m_Cart_Iv"
            android:src="@mipmap/add_cart"
            android:layout_below="@id/m_Cart_Goods_Name"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/m_Cart_Goods_Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2)"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/m_Cart_Add"
            android:layout_marginTop="5dp"
            android:layout_below="@id/m_Cart_Goods_Name"
            android:layout_marginLeft="7dp"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/m_Cart_Cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/m_Cart_Goods_Count"
            android:src="@mipmap/del_cart"
            android:layout_below="@id/m_Cart_Goods_Name"
            android:layout_marginLeft="7dp"
            />
        <TextView
            android:id="@+id/m_Cart_Privice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ 419"
            android:textColor="#f57f00"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
</RelativeLayout>
